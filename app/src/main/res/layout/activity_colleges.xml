<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.sagar.eventmanager.Colleges"
    android:background="@android:color/holo_orange_light">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >

        <RelativeLayout android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colleges List"
        android:id="@+id/textView2"
        android:textSize="45dp"
        android:textAlignment="center"
        android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        android:focusable="false"
        android:enabled="false"
        android:linksClickable="false"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="> SRM University, Delhi Meerut Road, Modinagar, Pin code - 201204."
        android:id="@+id/textView3"
        android:textSize="20dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="> Krishna Institute Of Engineering and Technology Ghaziabad - Meerut Highway (NH-58),P.Box-02 Ghaziabad-201206 "
        android:id="@+id/textView4"
        android:textSize="20dp"
        android:autoText="false"
        android:layout_below="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="> Institute of Technology and Science, Mohan Nagar, Ghaziabad-201007"
        android:id="@+id/textView5"
        android:layout_marginTop="25dp"
        android:textSize="20dp"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="> Meerut Institute of Engineering &amp; Technology, Meerut N.H. 58, Meerut-250005"
        android:id="@+id/textView10"
        android:textSize="20dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="25dp" />
        </RelativeLayout>
    </ScrollView>


