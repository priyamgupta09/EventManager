<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".homepage"
    android:id="@+id/home"
    android:background="@color/accent_material_light"
    android:elevation="-20dp"
    android:focusable="false">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Manager"
        android:id="@+id/textView"
        android:textSize="45dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:theme="@style/Base.Theme.AppCompat.Light.DarkActionBar"
        android:focusable="false"
        android:enabled="false"
        android:linksClickable="false"
        android:textColor="@android:color/black" />


    <TextClock
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textClock"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="22sp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="About"
        android:id="@+id/button"
        android:textSize="25dp"
        android:clickable="true"
        android:layout_marginTop="60dp"
        android:background="@android:color/white"
        android:layout_below="@+id/button6"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3"
        android:fontFamily="Arial"
        android:textColor="@android:color/black"
        android:elegantTextHeight="false" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="COLLEGES"
        android:id="@+id/button2"
        android:textSize="25dp"
        android:clickable="true"
        android:layout_alignTop="@+id/button"
        android:layout_alignRight="@+id/textClock"
        android:layout_marginRight="10dp"
        android:background="@android:color/white"
        android:fontFamily="Arial"
        android:textColor="@android:color/black"
        style="?android:attr/borderlessButtonStyle"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Events"
        android:id="@+id/button3"
        android:layout_marginTop="40dp"
        android:textSize="25dp"
        android:clickable="true"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:background="@android:color/white"
        style="@style/Base.TextAppearance.AppCompat.Display1"
        android:fontFamily="Arial"
        android:textColor="@android:color/black" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text="Credits"
        android:id="@+id/button4"
        android:layout_alignTop="@+id/button3"
        android:layout_alignLeft="@+id/button2"
        android:textSize="25sp"
        android:clickable="true"
        android:textColor="@android:color/black"
        android:background="@android:color/white"
        android:fontFamily="Arial"
        style="@android:style/TextAppearance.Material.Button" />

    <Button
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Exit"
        android:id="@+id/button5"
        android:layout_marginTop="39dp"
        android:textSize="25dp"
        android:clickable="true"
        android:background="@android:color/white"
        android:longClickable="false"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:fontFamily="Arial"
        android:textColor="@android:color/black" />
    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp"
        android:id="@+id/button6" />

</RelativeLayout>
